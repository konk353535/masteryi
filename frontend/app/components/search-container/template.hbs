<div class="container">

  {{#each championData as |champion|}}
  <div style="
    display: flex;
    align-items: center;
    flex-direction: row;
    margin: 10px;
    padding: 10px;
    background-color: #3D5587;
    border: 1px solid #f8f8f8;
    color: #f7f7f7">
    <div style="display: flex; flex-direction: column; text-align: center;">
      {{champion-image championId=champion.champion_id size='large'}}
      <div style="margin-top: 5px; color: #f7f7f7;">{{champion-name championId=champion.champion_id}}</div>
    </div>
    <div style="display: flex; flex-direction: column; align: center; text-align: center; flex: 1 1; margin-left: 40px; margin-right: 40px;">
      <h1>Score</h1>
      <div style='width: 100%; height: 0px; border-top: 1px solid #f8f8f8;'></div>
      <h1 style="color: #C9554F">{{format-number number=champion.points}}</h1>
    </div>
    <div style="display: flex; flex-direction: column; margin-left: 10px; margin-right: 10px; flex: 2 2; align-items: center;">
      <div style="font-size: 20px; margin-top: 5px; margin-bottom: 5px;">
        Rank: {{champion.champion_rank}} / {{champion.max_champion_rank}}
      </div>
      <div style="font-size: 20px; margin-top: 5px; margin-bottom: 5px;">
        Top {{champion-name championId=champion.champion_id}}: {{format-number number=champion.max_champion_points}}
      </div>
    </div>
    <div style="display: flex; flex-direction: column; margin-left: 10px; margin-right: 10px; flex: 2 2; align-items: center;">
      <div style="font-size: 20px; margin-top: 5px; margin-bottom: 5px;">
        Overall Rank: {{champion.overall_rank}} / {{champion.max_overall_rank}}
      </div>
      <div style="font-size: 20px; margin-top: 5px; margin-bottom: 5px;">
        Top Overall: {{format-number number=champion.max_overall_points}}
      </div>
    </div>
  </div>
  {{/each}}


</div>
